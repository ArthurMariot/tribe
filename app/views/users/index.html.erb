
<form novalidate="novalidate" class="simple_form search" id="search-map" action="#" accept-charset="UTF-8" method="get">
    <input name="utf8" type="hidden" value="&#x2713;" />
    <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="query" id="query" placeholder="Search by city or team" />
        <button name="commit" value="Search" type="submit" class="btn-green">
            <i class="fas fa-search"></i> Search
        </button>
    </div>
</form>

  <div id="map" style="width: 80%;
  height: 550px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

