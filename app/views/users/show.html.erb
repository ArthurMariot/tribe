        <p>Working hours in common:</p>
  <div class="time-bar">
    <div class="progress">
      <% if current_user.matchingtimezone(@user).first == current_user.matchingtimezone(@user).last %>
      <div class="progress-warning" role="progressbar" style="width:100%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100">No match found</div>
    <% else %>
      <div class="progress-warning" role="progressbar" style="width:<%=  ((100 / 14).to_f * (current_user.matchingtimezone(@user).first - 7)) %>%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
      <% if current_user.matchingtimezone(@user).first < 13 %>
      <p style="font-size: 12px; margin-right: 10px"> <%= current_user.matchingtimezone(@user).first %> am</p>
      <% else %>
      <p style="font-size: 12px; margin-right: 10px"> <%= current_user.matchingtimezone(@user).first - 12 %> pm</p>
      <% end %>
      <div class="progress-bar bg-warning" role="progressbar" style="width: <%= ((100 / 14).to_f * (current_user.matchingtimezone(@user).last)-7) - ((100 / 14).to_f * (current_user.matchingtimezone(@user).first)-7) %>%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
      <% if current_user.matchingtimezone(@user).last < 13 %>
     <p style="font-size: 12px; margin-left: 10px"> <%= current_user.matchingtimezone(@user).last %> am</p>
      <% else %>
     <p style="font-size: 12px; margin-left: 10px"> <%= current_user.matchingtimezone(@user).last - 12  %> pm</p>
      <% end %>
      <% end %>
    </div>

  </div>
