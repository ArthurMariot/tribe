            <img class="avatar-extra-large-show" src="https://fpcambler.org/wp-content/themes/church-emphasis/assets/dist/img/default-avatar.jpg">
        <% else %>
            <img class="avatar-extra-large-show" src="<%= cl_image_path @user.avatar %>">
        <% end %>
      </div>

      <div class="employee-info">
        <h4>
          <%= @user.first_name %> <%= @user.last_name %>
        </h4>
        <p>
          <%= @user.team.name %>
        </p>
